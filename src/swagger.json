    },
    "/projects/{id}": {
      "delete": {
        "summary": "Delete Project by Id",
        "description": "Rota responsavel por deletar Projeto pelo Id",
        "tags": ["Project"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          }
        }
