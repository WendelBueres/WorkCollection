{
  "openapi": "3.0.0",
  "info": {
    "title": "WorkCollection API",
    "description": "API feita para coleção de projetos",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://workcollection.herokuapp.com/",
      "description": "API produção"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login User",
        "description": "Rota responsavel pelo Login",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "login": {
                  "value": {
                    "email": "joão@mail.com",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "token: "
          },
          "400": { "description": "email is a field required" }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "Create User",
        "description": "Rota responsavel por criar Usuario",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "Joao Guilherme",
                    "email": "joão@mail.com",
                    "password": "12345678",
                    "image": "https://imagem.com",
                    "bio": "Estudante full Stack",
                    "contact": {
                      "linkedin": "https://linkedin.com/JoaoGuilherme",
                      "github": "https://github.com/JoaoGuilherme",
                      "phone": "99999999999"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/CreateUser" }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get All Users",
        "description": "Rota responsavel por consultar todos Usuarios",
        "tags": ["User"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/CreateUser" }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Get User by Id",
        "description": "Rota responsavel por consultar Usuario por Id",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Usuario pelo Id",
            "required": "true"
          }
        ],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/CreateUser"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete User by Id",
        "description": "Rota responsavel por deletar Usuario por Id",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Usuario pelo Id",
            "required": "true"
          }
        ],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "204": {
            "description": "User deleted with sucess!"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "patch": {
        "summary": "Update User by Id",
        "description": "Rota responsavel por atualizar Usuario por Id",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Usuario pelo Id",
            "required": "true"
          }
        ],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              },
              "examples": {
                "Update": {
                  "value": {
                    "name": "Joao Victor",
                    "email": "joaoVic@mail.com",
                    "password": "12345678910111213",
                    "image": "https://imagem.com",
                    "bio": "Estudante front end",
                    "contact": {
                      "linkedin": "https://linkedin.com/JoaoVictor",
                      "github": "https://github.com/JoaoVictor",
                      "phone": "88888888888"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/projects": {
      "post": {
        "summary": "Create Project",
        "description": "Rota responsavel por criar Projeto",
